<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".GetPlanActivity"
                android:background="@drawable/background_task">

    <Button
            android:id="@+id/task_btn_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/ic_back" />

    <ImageView
            android:id="@+id/task_iv_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="320dp"
            android:scaleType="centerCrop"
            android:background="@drawable/photo_user01"
            android:src="@drawable/task_circle_img" />

    <LinearLayout
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:id="@+id/task_lin_top_btns"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:gravity="center">

        <!--        领取学习任务-->
        <Button
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/task_btn_testself"
                android:text="领取任务"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:typeface="sans"
                android:background="@drawable/click_button"
        />
        <!--        提交学习任务-->
        <Button
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/task_btn_task"
                android:layout_marginLeft="25dp"
                android:text="提交任务"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:typeface="sans"
                android:background="@drawable/click_button" />
    </LinearLayout>


</RelativeLayout>