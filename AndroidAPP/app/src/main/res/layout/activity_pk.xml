<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".PkActivity"
                android:background="@drawable/background_exam">

    <Button
            android:id="@+id/exam_btn_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_back" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exam_tv_ring"
            android:text="擂 台"
            android:textSize="50sp"
            android:textColor="#000000"
            android:layout_below="@+id/exam_btn_back"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_centerHorizontal="true"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/exam_tv_ring"
            android:paddingTop="40dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exam_tv_title"
                android:textSize="25sp"
                android:textColor="#000000"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/exam_tv_A"
                android:text="A"
                android:textSize="20sp"
                android:typeface="serif"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/exam_tv_B"
                android:text="B"
                android:textSize="20sp"
                android:typeface="serif"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/exam_tv_C"
                android:text="C"
                android:textSize="20sp"
                android:typeface="serif"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/exam_tv_D"
                android:text="D"
                android:textSize="20sp"
                android:typeface="serif"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>